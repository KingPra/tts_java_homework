	// making cereal;
	public static void cereal() {
		int cereal = 10;
		int milk = 10;
		if (cereal > 0 && milk > 0) {
			cereal--;
			milk--;
			System.out.println("Open bowl cabinet cover.");
			System.out.println("Get clean bowl from bowl cabinet.");
			System.out.println("Close bowl cabinet cover.");
			System.out.println("Gently place bowl on counter.");
			System.out.println("Get cereal");
			System.out.println("Open cereal container");
			System.out.println("Pour desired amount of cereal into bowl");
			System.out.println("Set cereal container down on cabinet");
			System.out.println("Close cereal container");
			System.out.println("Go to fridge");
			System.out.println("Open fridge");
			System.out.println("Get milk container");
			System.out.println("Go to counter");
			System.out.println("Open milk container");
			System.out.println("Pour desired amount of milk into bowl");
			System.out.println("Put milk container down");
			System.out.println("Close milk container");
			System.out.println("Go to fridge");
			System.out.println("Put milk container in fridge");
			System.out.println("Close fridge");
			System.out.println("Go to counter");
			System.out.println("Spoon magically appears");
			System.out.println("Get spoon");
		} else {
			System.out.println("You don't have all the neccesary supplies");
		}
	}
	
	public static String user() {
		Scanner name = new Scanner(System.in); //creates a scanner object;
		System.out.print("Enter username");
		String username = name.nextLine();
		name.close();
		System.out.println("Username is : " + username);
		return username;
	}
	
	public static void rockPaperScissors() {
		Scanner name = new Scanner(System.in);
		System.out.print("Enter username: ");
		String username = name.nextLine();
		System.out.println("Username is: " + username);
		Random random = new Random();
		int computerChoice = random.nextInt();
		name.close();
		System.out.println(random.nextInt(3));
	
}
